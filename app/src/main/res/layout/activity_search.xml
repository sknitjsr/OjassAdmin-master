<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    tools:context="ojassadmin.nitjsr.in.ojassadmin.SearchActivity">

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/ll_ojass_id"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OJ18"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>

            <EditText
                android:layout_weight="1"
                android:id="@+id/et_search_oj_id"
                android:hint="Ojass Id"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/search_by_ojass_id"
                android:textSize="@dimen/btn_text_size"
                android:textAllCaps="false"
                android:background="@drawable/button_bg"
                android:text="Search"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_weight="1"
                android:id="@+id/et_search_email"
                android:layout_width="0dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content" />


            <Button
                android:textSize="@dimen/btn_text_size"
                android:textAllCaps="false"
                android:background="@drawable/button_bg"
                android:layout_gravity="center_vertical"
                android:id="@+id/search_by_email"
                android:text="Search"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />


        </LinearLayout>

        <Button
            android:textSize="@dimen/btn_text_size"
            android:textAllCaps="false"
            android:background="@drawable/button_bg"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_search_qr"
            android:text="Search By QR"
            android:gravity="center"
            android:layout_width="140dp"
            android:layout_height="45dp" />

    </LinearLayout>

</RelativeLayout>
