<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ojassadmin.nitjsr.in.ojassadmin.DetailsActivity">

    <LinearLayout
        android:id="@+id/layout_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Username"
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:text="Branch"
            android:id="@+id/user_branch"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:text="Registration Id"
            android:id="@+id/user_reg_id"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/layout_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_add_events"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Add"
            android:layout_width="200dp"
            android:layout_height="50dp" />

        <Spinner
            android:id="@+id/spinner_events"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"></Spinner>

    </LinearLayout>

</RelativeLayout>
